<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_bottom_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bottom_chat"
        android:background="@drawable/round_bkg_small"/>

    <ImageView
        android:id="@+id/view_bottom_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/bottom_close"
        android:background="@drawable/round_bkg_small"/>

    <ImageView
        android:id="@+id/view_bottom_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_bottom_chat"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_bkg_small"
        android:padding="5dp"
        android:src="@drawable/icon_gift" />

    <ImageView
        android:id="@+id/view_bottom_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_bottom_chat"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_bkg_small"
        android:padding="5dp"
        android:src="@drawable/icon_op_open" />
</RelativeLayout>